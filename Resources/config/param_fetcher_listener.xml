<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="fos_rest.param_fetcher_listener" class="FOS\RestBundle\EventListener\ParamFetcherListener">
            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" priority="5" />
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" priority="20" />
            <tag name="kernel.event_listener" event="kernel.finish_request" method="onKernelFinishRequest" priority="0" />
            <argument type="service" id="service_container"/>
            <argument>false</argument>
        </service>

    </services>
</container>
